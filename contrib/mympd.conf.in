#myMPD config file

[mpd]
#Connection to mpd
host = /var/run/mpd/socket
#port = 6600
#pass = 

#absolut path of music_directory of mpd
#none = no local music_directory
#auto = get music_directory from mpd (only supported, if connected to mpd socket)
musicdirectory = auto


[webserver]
#Webserver options
webport = 80

#Enable ssl
ssl = true
sslport = 443


[mympd]
#Loglevel
#0 = error
#1 = warn
#2 = info
#3 = verbose
#4 = debug
loglevel = 2

#myMPD user
user = mympd

#Enable mixramp settings
mixramp = false

#Enable system commands defined in syscmds section
syscmds = false


[plugins]
coverextract = false


[syscmds]
Shutdown = sudo /sbin/halt
