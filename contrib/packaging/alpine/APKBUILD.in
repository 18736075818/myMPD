pkgname=myMPD
pkgver=__VERSION__
pkgrel=0
pkgdesc="myMPD is a standalone and mobile friendly web mpdclient"
url="https://github.com/jcorporation/myMPD"
arch="all"
license="GPL-2.0-or-later"
depends="libmediainfo openssl libmagic1"
makedepends="cmake libmediainfo-dev openssl-dev linux-headers libmagic-dev"
install="$pkgname.pre-install"
source="mympd_$pkgver.orig.tar.gz"
builddir="$srcdir"
options="!check"
#no test suite

build() {
	cd "$builddir" || exit 1
	mkdir release
	cd release || exit 1
	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=RELEASE ..
	make
}

package() {
	cd "$builddir/release" || exit 1
	make DESTDIR="$pkgdir" install
}
